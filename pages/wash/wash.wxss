/* pages/wash/wash.wxss */
.container view{
  width: 670rpx;
  height: 80rpx;
}
picker{
  width: 670rpx;
  height: 80rpx;
  margin-bottom: 30rpx;
}
.picker{
  height: 80rpx;
  line-height: 80rpx;
  color: #777;
}
.picker,input{
  width: 100%;
  padding: 0 10rpx 0 30rpx;
  border: none;
  background-color: #fff;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.pay{
  width: 100%;
  color: #fff;
  background-color: #1890ff;
}
.total {
  display: flex;
  background-color: #fff;
}
.total .text {
  flex: 0 0 100rpx;
  line-height: 28rpx;
  margin-left: 30rpx;
  color: #777;
}
.total .count {
  flex: 1;
  text-align: right;
  line-height: 80rpx;
}
.count image {
  display: inline-block;
  vertical-align: top;
  height: 60rpx;
  width: 60rpx;
  margin: 10rpx 20rpx;
}
.price{
  text-align: center;
  margin-top: 260rpx;
  margin-bottom: 20rpx;
  font-size: 66rpx;
  color: #ff5a00;
}