<!--pages/login/login.wxml-->
<view class="container">
    <form>
     <view>
       <input type='number' placeholder="请输入手机号" maxlength="11" bindinput='inputMobile' />
     </view>
      <view>
        <input type='text' placeholder='请输入密码' password='true' bindinput='inputPsd' />
      </view>
      <view class='box3'>
        <input class='verify' type='text' placeholder='请输入验证码' maxlength="4" bindinput='importVerify'/>
        <view class='canvas'>
          <canvas canvas-id="canvas" bindtap='change'></canvas>
        </view>
      </view>
      <view>
        <button class='login' bindtap='loginClick'>登录</button>
        <button class='register' bindtap='registerClick'>注册</button>
      </view>
    </form>
</view>

