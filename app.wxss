/**app.wxss**/
page {
  background-color: #f5f8fa; 
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
}  
input{
  padding: 5rpx 5rpx 5rpx 10rpx;
  margin: 20rpx 0;
  height: 80rpx;
  border: 1rpx solid #ddd;
  /* border-radius: 10rpx; */
}
button{
  margin: 20rpx 0;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.arrow{
  position: relative;
}
.arrow:after{
  content: ''; 
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #333;
  border-right: 2rpx solid #333;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
   top:30rpx;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
 .container {
  height: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0;
}


.logo{
  width: 232rpx;
  height: 232rpx;
  margin-bottom: 80rpx;
}

.active{
  background-color: #1890ff!important;
}

.registerText{
  float: right;
  color: #333;
}
.registerText .text{
  color: #ff5a00;
}